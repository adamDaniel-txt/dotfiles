# execute
exec /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1
exec swaync
exec syncthing -no-browser &
exec swayidle \
    timeout 300 'swaylock --color 1d1d1d' \
    timeout 600 'swaymsg "output * dpms off"' \
    after-resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock --color 1d1d1d'

# variables
set $mod Mod4
set $volume_up pamixer -u -i 5
set $volume_down pamixer -d 5
set $toggle_mute pamixer -t
set $volume_changed_sound paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
set $term kitty
#set $menu rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons
set $menu tofi-drun --drun-launch=true

bindsym $mod+Return exec $term
bindsym $mod+Space exec $menu
bindsym $mod+n exec swaync-client -t -sw
bindsym $mod+e exec kitty -e lf
bindsym $mod+Shift+b exec librewolf
bindsym $mod+b exec swaymsg "workspace 2; exec firefox"
bindsym $mod+g exec swaymsg "workspace 9; exec gimp"
bindsym $mod+o exec swaymsg "workspace 10; exec obs"

# rules
for_window [app_id="kitty"] floating enable, resize set 1280 720
for_window [app_id="mpv"] floating enable, resize set 1280 720
for_window [app_id="zathura"] floating enable, resize set 720 860
for_window [title="sxiv"] floating enable, resize set 720 720
for_window [class="MuPDF"] floating enable, resize set 720 860

# wallpaper
output * background ~/Pictures/Wallpapers/abstract.png fill

# windows
bindsym $mod+q kill
bindsym $mod+Shift+r reload; exec notify-send 'sway' 'Restarted'
bindsym $mod+Shift+q exit
bindsym $mod+x exec swaylock --color 1d1d1d

# move focus
bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down

# move window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down

# resize window
bindsym $mod+Ctrl+h resize shrink width 20px
bindsym $mod+Ctrl+l resize grow width 20px

# input configuration
input * {
    xkb_layout us
    xkb_options caps:swapescape
}

# mouse sensitivity
input "11145:26145:UGREEN_BLE_Mouse" {
    accel_profile "adaptive"
    pointer_accel -1
}

# mouse mode
floating_modifier $mod

# cursor configuration
seat seat0 xcursor_theme Banana 32

# audio
#bindsym $mod+Up exec ~/.config/scripts/changevolume up
#bindsym $mod+Down exec ~/.config/scripts/changevolume down
#bindsym $mod+m exec ~/.config/scripts/changevolume mute
bindsym $mod+Up exec "$volume_up && $volume_changed_sound"
bindsym $mod+Down exec "$volume_down && $volume_changed_sound"
bindsym XF86AudioMute exec "$toggle_mute && sleep 0.3 && $volume_changed_sound"

# Media
bindsym $mod+Left exec playerctl previous
bindsym XF86AudioPlay exec playerctl play-pause
bindsym $mod+Right exec playerctl next

# Screenshot
bindsym $mod+Delete exec grimshot save screen ~/Pictures/Screenshots/$(date '+%Y-%m-%d-%T')-screenshot.png; exec notify-send 'Grim' 'Image saved to ~/Pictures/Screenshots/'
bindsym $mod+s exec grimshot save screen - | wl-copy; exec notify-send 'Grim' 'Image saved to Clipboard'
bindsym $mod+Shift+s exec grimshot save area - | wl-copy && exec notify-send 'Grim' 'Image saved to Clipboard'

# Backlight
#bindsym XF86MonBrightnessUp exec light -A 6
#bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

# Workspaces:
#
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

# cycle workspace
bindsym Alt+tab workspace next_on_output
bindsym $mod+tab workspace prev_on_output

# make the current focus fullscreen
bindsym $mod+f fullscreen

# toggle floating mode
bindsym $mod+t floating toggle

# font
font pango:Caskaydia Cove Nerd Font 12

### Gaps
gaps inner 16
default_border pixel 4

### Borders
client.focused          #7bb75b #7bb75b #282a36 #7bb75b #7bb75b
client.focused_inactive #282a36 #282a36 #7bb75b #282a36 #282a36
client.unfocused        #282a36 #282a36 #7bb75b #282a36 #282a36
client.urgent           #ff5555 #ff5555 #282a36 #ff5555 #ff5555
client.placeholder      #282a36 #282a36 #7bb75b #282a36 #282a36
client.background       #282a36

exec_always ~/.config/waybar/waybar.sh

#GTK issue
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
